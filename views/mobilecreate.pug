extends layout
block content
  h1= title
  form(id='MobileForm', action="/resource/mobiles", method="POST")
    div.form-group(class="mx-sm-5 mb-2")
      label.mobileAttr(for='mobile_brand') Mobile brand
      input#mobile_brand(type='text', name='mobile_brand' class="form-control")
    div.form-group(class="mx-sm-5 mb-2")
      label.mobileAttr(for='mobile_color') Mobile model
      input#mobile_color(type='text', name='mobile_color' class="form-control")  
    div.form-group(class="mx-sm-5 mb-2")
      label.mobileAttr(for='mobile_cost') Mobile cost
      input#mobile_cost(type='number', name='mobile_cost' class="form-control")
    input(type="submit" class="mx-sm-5 mb-2 btn btn-primary")
  script.
    document.forms['MobileForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) 
      }).then((resp) => {
        return resp.json(); 
      }).then((body) => {
        alert("Save succeded")
      }).catch((error) => {
        alert("Save failed " + error )
      });
    });